        height = 200
        width = 200
        alt = BCA
        linktitle = BCA
    }
    favicon {
        file = EXT:bca/Resources/Public/Icons/favicon.ico
    }
    fluidtemplate {
        layoutRootPath = EXT:bca/Resources/Private/Layouts/Page/
        partialRootPath = EXT:bca/Resources/Private/Partials/Page/
        templateRootPath = EXT:bca/Resources/Private/Templates/Page/
    }
}


##################
### EXTENSIONS ###
##################
plugin.bootstrap_package {
